root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.scss]
indent_size = 4

[{*.module, *.hphp, *.phtml, *.php5, *.php4, *.php, *.ctp, *.inc}]
indent_style = tab

[{composer.lock, .babelrc, .stylelintrc, .eslintrc, jest.config, bowerrc, *.jsb3, *.jsb2, *.json}]
indent_size = 4
